{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/nest-nguniversal/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nrwl/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/nest-nguniversal",
        "main": "packages/nest-nguniversal/src/index.ts",
        "project": "packages/nest-nguniversal/package.json",
        "index": "packages/nest-nguniversal/src/index.ts",
        "tsConfig": "packages/nest-nguniversal/tsconfig.lib.json",
        "assets": [
          {
            "glob": "README.md",
            "input": ".",
            "output": "."
          }
        ]
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/nest-nguniversal/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/packages/nest-nguniversal"],
      "options": {
        "jestConfig": "packages/nest-nguniversal/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "version": {
      "executor": "@jscutlery/semver:version",
      "options": {
        "push": true,
        "noVerify": true,
        "baseBranch": "master",
        "preset": "conventional",
        "tagPrefix": "${projectName}@",
        "postTargets": ["nest-nguniversal:github", "nest-nguniversal:publish"]
      }
    },
    "github": {
      "executor": "@jscutlery/semver:github",
      "options": {
        "tag": "${tag}",
        "notes": "${notes}"
      }
    },
    "publish": {
      "executor": "ngx-deploy-npm:deploy",
      "options": {
        "access": "public"
      }
    }
  },
  "tags": []
}
